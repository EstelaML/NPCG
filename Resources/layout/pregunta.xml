<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">

    <LinearLayout   
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#aff4c6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:orientation="horizontal"
            android:background="#094826">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/mtrl_btn_transparent_bg_color"
                android:text="Abandonar"
                android:textColor="#8CC63F"
                android:id="@+id/volver"/>


            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:paddingRight="20px"
                android:layout_weight="1"
                android:text="Nombre de usuario"
                android:textSize="7pt"
                android:textColor="#8CC63F"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/userNotLog"
                android:background="@color/mtrl_btn_transparent_bg_color"
                android:id="@+id/perfil"/>

        </LinearLayout>

        <Space
             android:layout_width="match_parent"
             android:layout_height="50px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:paddingLeft="75px"
            android:paddingRight="75px"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valor de la pregunta: "
                android:id="@+id/valor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Por cada error: "
                    android:id="@+id/penalizacion"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puntuación total: "
                    android:id="@+id/ptsTotales"/>
                    android:id="@+id/ptsTotales"/>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_weight="1"
                android:background="#ffa629"
                android:text="Pregunta aleatoria totalmente verdadera"
                android:textColor="#332108"
                android:autoSizeTextType="uniform"
                android:padding="10sp"
                android:gravity="center"
                android:id="@+id/pregunta"/>

            <Button
                android:text="Respuesta 1"
                android:textColor="#332108"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp"
                android:backgroundTint="#ffcd29"
                android:id="@+id/button1"/>

            <Button
                android:text="Respuesta 2"
                android:textColor="#332108"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp"
                android:backgroundTint="#ffcd29"
                android:id="@+id/button2"/>

            <Button
                android:text="Respuesta 3"
                android:textColor="#332108"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp"
                android:backgroundTint="#ffcd29"
                android:id="@+id/button3"/>

            <Button
                android:text="Respuesta 4"
                android:textColor="#332108"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp"
                android:backgroundTint="#ffcd29"
                android:id="@+id/button4"/>

            <Button
                android:text="Consolidar"
                android:textColor="#fabaac"
                android:layout_width="match_parent"
                android:layout_height="10sp"
                android:layout_marginHorizontal="80sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#f24822"
                android:id="@+id/consolidar"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/timeBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:progress="100"
/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:orientation="horizontal"
            android:background="#094826">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/mtrl_btn_transparent_bg_color"
                android:layout_weight="1"
                android:text="Juego"
                android:textSize="11sp"
                android:textColor="#8CC63F"
                android:enabled="false"
                android:id="@+id/juego"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/mtrl_btn_transparent_bg_color"
                android:layout_weight="1"
                android:text="Estadísticas"
                android:textSize="10sp"
                android:textColor="#8CC63F"
                android:enabled="true"
                android:id="@+id/estadisticas"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/mtrl_btn_transparent_bg_color"
                android:layout_weight="1"
                android:text="Trofeos"
                android:textSize="10sp"
                android:textColor="#8CC63F"
                android:enabled="true"
                android:id="@+id/trofeos"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/mtrl_btn_transparent_bg_color"
                android:layout_weight="1"
                android:text="Equipo"
                android:textSize="10sp"
                android:textColor="#8CC63F"
                android:enabled="true"
                android:id="@+id/equipo"/>
            
        </LinearLayout>
        
    </LinearLayout>

</RelativeLayout>