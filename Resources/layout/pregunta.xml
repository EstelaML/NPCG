<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">

    <LinearLayout   
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:paddingVertical="5sp"
            android:paddingHorizontal="10sp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/colorPrimary">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/mtrl_btn_transparent_bg_color"
                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="left"
                android:text="Abandonar"
                android:textColor="@color/colorSecundary"
                android:id="@+id/volver"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/userNotLog"
                android:background="@color/mtrl_btn_transparent_bg_color"
                android:id="@+id/perfil"/>

        </LinearLayout>

        <Space
             android:layout_width="match_parent"
             android:layout_height="50sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:paddingLeft="75px"
            android:paddingRight="75px"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:background="@drawable/camposInf"
                android:text="Pregunta aleatoria totalmente verdadera"
                android:textColor="@color/colorSecundary"
                android:autoSizeTextType="uniform"
                android:padding="10sp"
                android:layout_marginTop="20dp"
                android:gravity="center"
 
                android:id="@+id/pregunta"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:text="Respuesta 1"
                android:textColor="@color/colorSecundary"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/pre"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp"
                android:id="@+id/button1"/>

            <Button
                android:text="Respuesta 2"
                android:textColor="@color/colorSecundary"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/pre"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp"
                android:id="@+id/button2"/>

            <Button
                android:text="Respuesta 3"
                android:textColor="@color/colorSecundary"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/pre"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp"
                android:id="@+id/button3"/>

            <Button
                android:text="Respuesta 4"
                android:textColor="@color/colorSecundary"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/pre"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp"
                android:id="@+id/button4"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/timeBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="7sp"
            android:layout_marginHorizontal="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="20sp"
            android:progress="100"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingVertical="1dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/colorPrimary">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/icon"/>
            
        </LinearLayout>
        
    </LinearLayout>

</RelativeLayout>