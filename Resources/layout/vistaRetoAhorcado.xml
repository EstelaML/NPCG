<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/mtrl_btn_transparent_bg_color"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="left"
            android:text="Abandonar"
            android:textColor="@color/colorSecundary"
            android:id="@+id/volver"
            tools:ignore="HardcodedText" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_userNotLog"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:id="@+id/perfil"
            android:contentDescription="" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="75px"
        android:paddingRight="75px"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/ahorcado_10"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:contentDescription=""
            android:id="@+id/ahorcadoImg"/>



       
    </LinearLayout>

    <ProgressBar
        android:id="@+id/timeBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="13sp"
        android:layout_marginHorizontal="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:progress="100"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingVertical="1dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_logo"
            android:contentDescription=""/>

    </LinearLayout>

</LinearLayout>