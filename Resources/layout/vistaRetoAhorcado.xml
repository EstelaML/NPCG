<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/mtrl_btn_transparent_bg_color"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="left"
            android:text="Abandonar"
            android:textColor="@color/colorSecundary"
            android:id="@+id/volver"
            tools:ignore="HardcodedText" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_userNotLog"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:id="@+id/perfil"
            android:contentDescription="" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingRight="40sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30sp"
            android:orientation="vertical">

            <TextView
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

            <TextView
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:id="@+id/textPtsConsolidados" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:src="@drawable/icon_heart"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:layout_marginRight="5sp"
            android:contentDescription=""
            android:id="@+id/heart1" />

        <ImageView
            android:src="@drawable/icon_heart"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="7sp"
            android:adjustViewBounds="true"
            android:contentDescription=""
            android:id="@+id/heart2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/ahorcado_1"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:adjustViewBounds="true"
            android:contentDescription=""
            android:id="@+id/ahorcadoImg" />

        <ImageButton
                android:src="@drawable/interrogante"
                android:scaleType="centerInside"
                android:background="@drawable/m3_tabs_transparent_background"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:id="@+id/interroganteButton"
                android:contentDescription="?" />

        <Space
        android:layout_width="match_parent"
        android:layout_height="10sp" />

        <TextView
            android:gravity="center"
            android:text="Los derechos fundamentales que todas las personas tienen, como la libertad de expresión, la igualdad ante la ley y el derecho a un trabajo digno:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="360sp"
            android:layout_height="90sp"
            android:id="@+id/enunciado"
            tools:ignore="HardcodedText"/>

        <TextView
            android:text="ENERGIAS RENOVABLES"
            android:gravity="center"
            android:padding="20sp"
            android:textSize="17sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="360sp"
            android:layout_height="70sp"
            android:id="@+id/palabra"
            tools:ignore="HardcodedText"/>

        <Space
        android:layout_width="match_parent"
        android:layout_height="6sp" />

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4">

            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25sp"
                android:minHeight="25sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout1">

                <Button
                    android:text="Q"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonQ"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="W"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonW"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="E"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonE"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="R"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonR"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="T"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonT"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="Y"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonY"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="U"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonU"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="I"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonI"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="O"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonO"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="P"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonP"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>

            <Space
            android:layout_width="match_parent"
            android:layout_height="6sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25sp"
                android:minHeight="25sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3">

                <Button
                    android:text="A"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonA"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="S"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonS"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="D"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonD"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="F"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonF"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="G"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonG"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="H"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonH"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="J"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonJ"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="K"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonK"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="L"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonL"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="Ñ"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonÑ"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>

            <Space
            android:layout_width="match_parent"
            android:layout_height="6sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25sp"
                android:minHeight="25sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2">

                <Button
                    android:text="Z"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonZ"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="X"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonX"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="C"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonC"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="V"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonV"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="B"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonB"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="N"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonN"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="M"
                    android:layout_width="35sp"
                    android:layout_height="40sp"
                    android:id="@+id/buttonM"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/timeBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="13sp"
        android:layout_marginHorizontal="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:progress="100" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingVertical="1dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_logo"
            android:contentDescription="" />
    </LinearLayout>
</LinearLayout>