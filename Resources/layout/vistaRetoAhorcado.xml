<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/mtrl_btn_transparent_bg_color"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="left"
            android:text="Abandonar"
            android:textColor="@color/colorSecundary"
            android:id="@+id/volver"
            tools:ignore="HardcodedText" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_userNotLog"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:id="@+id/perfil"
            android:contentDescription="" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp"/>
    <TextView
        android:text=""
        android:paddingLeft="30sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />
    <TextView
        android:paddingLeft="30sp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textPtsConsolidados" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/ahorcado_1"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:contentDescription=""
            android:id="@+id/ahorcadoImg"/>

        <Space
        android:layout_width="match_parent"
        android:layout_height="30sp"/>

        <TextView
            android:gravity="center"
            android:text="Relacionado con la ODS 1:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enunciado" />

        <Space
        android:layout_width="match_parent"
        android:layout_height="10sp"/>

        <TextView
            android:text="P _ B _ _ _ A"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/palabra" />

        <Space
        android:layout_width="match_parent"
        android:layout_height="30sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25sp"
            android:minHeight="25sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1">

            <Button
                android:text="Q"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonQ" />
            <Button
                android:text="W"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonW" />
            <Button
                android:text="E"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonE" />
            <Button
                android:text="R"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonR" />
            <Button
                android:text="T"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonT" />
            <Button
                android:text="Y"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonY" />
            <Button
                android:text="U"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonU" />
            <Button
                android:text="I"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonI" />
            <Button
                android:text="O"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonO" />
            <Button
                android:text="P"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonP" />
        </LinearLayout>

        <Space
        android:layout_width="match_parent"
        android:layout_height="8sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25sp"
            android:minHeight="25sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3">

            <Button
                android:text="A"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonA" />
            <Button
                android:text="S"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonS" />
            <Button
                android:text="D"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonD" />
            <Button
                android:text="F"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonF" />
            <Button
                android:text="G"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonG" />
            <Button
                android:text="H"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonH" />
            <Button
                android:text="J"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonJ" />
            <Button
                android:text="K"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonK" />
            <Button
                android:text="L"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonL" />
            <Button
                android:text="Ñ"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonÑ" />
        </LinearLayout>

        <Space
        android:layout_width="match_parent"
        android:layout_height="8sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25sp"
            android:minHeight="25sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2">

            <Button
                android:text="Z"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonZ" />
            <Button
                android:text="X"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonX" />
            <Button
                android:text="C"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonC" />
            <Button
                android:text="V"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonV" />
            <Button
                android:text="B"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonB" />
            <Button
                android:text="N"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonN" />
            <Button
                android:text="M"
                android:layout_width="35sp"
                android:layout_height="40sp"
                android:id="@+id/buttonM" />
        </LinearLayout>



    </LinearLayout>

    <ProgressBar
        android:id="@+id/timeBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="13sp"
        android:layout_marginHorizontal="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:progress="100"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingVertical="1dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_logo"
            android:contentDescription=""/>

    </LinearLayout>

</LinearLayout>