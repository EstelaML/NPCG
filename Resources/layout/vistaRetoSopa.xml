<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/mtrl_btn_transparent_bg_color"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="left"
            android:text="Abandonar"
            android:textColor="@color/colorSecundary"
            android:id="@+id/volver"
            tools:ignore="HardcodedText" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_userNotLog"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:id="@+id/perfil"
            android:contentDescription="" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="40sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24sp"
            android:orientation="vertical">

            <TextView
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

            <TextView
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:id="@+id/textPtsConsolidados" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:src="@drawable/icon_heart"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:layout_marginRight="5dp"
            android:contentDescription=""
            android:id="@+id/heart1"/>

        <ImageView
            android:src="@drawable/icon_heart"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="11sp"
            android:adjustViewBounds="true"
            android:contentDescription=""
            android:id="@+id/heart2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="75px"
        android:paddingRight="75px"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:background="@drawable/style_camposInf"
            android:text=""
            android:textColor="@color/colorSecundary"
            android:autoSizeTextType="uniform"
            android:padding="10sp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:id="@+id/pregunta"/>

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/linearLayout1">

            <ImageView
                android:paddingTop="30dp"
                android:src="@drawable/abc_ab_share_pack_mtrl_alpha"
                android:layout_width="170sp"
                android:layout_height="170sp"
                android:layout_gravity="center"
                android:id="@+id/imagenOds"
                android:contentDescription=""/>

            <ImageButton
                android:src="@drawable/interrogante"
                android:scaleType="centerInside"
                android:layout_marginTop="19sp"
                android:background="@drawable/m3_tabs_transparent_background"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:id="@+id/interroganteButton"
                android:contentDescription="?" />

         </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="NestedWeights" />

        <Button
            android:text=""
            android:textColor="@color/colorSecundary"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/style_pregunta"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="5sp"
            android:id="@+id/button1"/>

        <Button
            android:text=""
            android:textColor="@color/colorSecundary"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/style_pregunta"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="5sp"
            android:id="@+id/button2"/>

        <Button
            android:text=""
            android:textColor="@color/colorSecundary"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/style_pregunta"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="5sp"
            android:id="@+id/button3"/>

        <Button
            android:text=""
            android:textColor="@color/colorSecundary"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/style_pregunta"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="5sp"
            android:id="@+id/button4"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/timeBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="13sp"
        android:layout_marginHorizontal="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:progress="100"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingVertical="1dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_logo"
            android:contentDescription=""/>

    </LinearLayout>

</LinearLayout>