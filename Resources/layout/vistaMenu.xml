<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="75px"
        android:paddingRight="75px"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="40sp"
            android:minHeight="140sp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1">

            <Button
                android:text="Pregunta"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="140sp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:id="@+id/partidaB" 
                tools:ignore="HardcodedText"/>

             <Space
                android:layout_width="30sp"
                android:layout_height="match_parent"/>

            <Button
                android:text="Ahorcado"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:background="@color/colorPrimary"
                android:layout_width="140sp"
                android:layout_height="match_parent"
                android:id="@+id/ahorcadoB" 
                tools:ignore="HardcodedText"/>

        </LinearLayout>

        <Space
        android:layout_width="match_parent"
        android:layout_height="30sp"/>
        
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:minWidth="80sp"
            android:minHeight="140sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1">

            <Button
                android:enabled="false"
                android:text="Sopa"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="140sp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDisabled"
                android:id="@+id/sopaB" 
                tools:ignore="HardcodedText"/>

             <Space
                android:layout_width="30sp"
                android:layout_height="match_parent"/>

            <Button
                android:enabled="false"
                android:text="Frase"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDisabled"
                android:layout_width="140sp"
                android:layout_height="match_parent"
                android:id="@+id/fraseB" 
                tools:ignore="HardcodedText"/>

        </LinearLayout>

        <Space
                android:layout_width="match_parent"
                android:layout_height="30sp"/>

         <Button
                android:enabled="false"
                android:text="Fiesta"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDisabled"
                android:layout_width="140sp"
                android:layout_height="140sp"
                android:id="@+id/fiestaB" 
                tools:ignore="HardcodedText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingVertical="1dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_logo"
            android:contentDescription="" />

    </LinearLayout>
</LinearLayout>