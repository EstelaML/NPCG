<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@android:color/white">

    <ImageButton
        android:src="@android:drawable/ic_menu_revert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:id="@+id/button1"
        android:background="@color/mtrl_btn_transparent_bg_color"
        android:contentDescription="" />

    <ImageButton
        android:src="@drawable/icon_userNotLog"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginVertical="10dp"
        android:id="@+id/buttonAvatar"
        android:background="@color/mtrl_btn_transparent_bg_color"
        android:contentDescription="" />

    <TextView
        android:text="Registro"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/textView4"
        android:textColor="@android:color/black"
        android:paddingBottom="20dp"
        tools:ignore="HardcodedText" />

        <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout3">

                <TextView
                    android:text="Nombre de usuario"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1"
                    android:textColor="@android:color/black"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:inputType="textPersonName"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/style_camposinf"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:id="@+id/nombreUsuario" />

             <TextView
                android:text="Correo electrónico"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:paddingTop="100dp"
                android:textColor="@android:color/black"
                tools:ignore="HardcodedText" />

        <ImageView
            android:src="@drawable/popupcorreo"
            android:layout_marginTop="-100sp"
            android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="300sp"
            android:id="@+id/popupCorreo" />

             <EditText
                 android:inputType="textEmailAddress"
                 android:layout_marginTop="140sp"
                 android:background="@drawable/style_camposinf"
                 android:layout_width="match_parent"
                 android:layout_height="45dp"
                 android:id="@+id/correo" />

             <TextView
                    android:paddingTop="12dp"
                android:layout_marginTop="200sp"
                    android:text="Contraseña"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textColor="@android:color/black"
                    tools:ignore="HardcodedText" />

             <ImageView
                    android:src="@drawable/popup"
                    android:layout_marginTop="0sp"
                    android:layout_marginLeft="27sp"
                    android:layout_width="wrap_content"
                    android:layout_height="300sp"
                    android:id="@+id/imageView1"
                    android:contentDescription="popup" />

           <RelativeLayout
                android:minWidth="25px"
                android:layout_marginTop="240sp"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout4">

                 <EditText
                    android:inputType="textPassword"
                    android:background="@drawable/style_camposinf"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:id="@+id/contraseña" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:gravity="right"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout1">

                    <ImageButton
                        android:layout_marginTop="2sp"
                        android:layout_marginLeft="0sp"
                        android:src="@drawable/ojo_abierto"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:scaleType="centerInside"
                        android:backgroundTint="@android:color/transparent"
                        android:id="@+id/ojoContraseña"
                        android:contentDescription="description" />

                </LinearLayout>

            </RelativeLayout>

             <TextView
                android:paddingTop="12dp"
                android:layout_marginTop="300sp"
                android:text="Repita la contraseña"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ererere"
                android:textColor="@android:color/black"
                tools:ignore="HardcodedText" />

             <RelativeLayout
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_marginTop="340sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout2">

                    <EditText
                        android:inputType="textPassword"
                        android:background="@drawable/style_camposinf"
                        android:textAlignment="textStart"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="45dp"
                        android:id="@+id/contraseña2" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:gravity="right"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout2">

                        <ImageButton
                            android:layout_marginTop="2sp"
                            android:layout_marginLeft="0sp"
                            android:src="@drawable/ojo_abierto"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:scaleType="centerInside"
                            android:backgroundTint="@android:color/transparent"
                            android:id="@+id/ojoContraseña2"
                            android:contentDescription="description" />

                        </LinearLayout>

                </RelativeLayout>

        </RelativeLayout>

    <TextView
        android:text=""
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:textColor="@color/colorError"
        android:layout_height="wrap_content"
        android:id="@+id/error" />

    <Button
        android:text="Registrar"
        android:background="@drawable/style_camposinf"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:id="@+id/registroB"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/colorPrimary"
        tools:ignore="HardcodedText" />
</LinearLayout>