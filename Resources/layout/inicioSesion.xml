<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="60px"
        android:paddingTop="100px"
        android:background="@android:color/white"
        android:id="@+id/linearLayoutMain">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutImages">
            <ImageButton
                android:src="@android:drawable/ic_menu_revert" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/atras"
                android:background="@color/mtrl_btn_transparent_bg_color"/>
        </LinearLayout>
        
        <Space
             android:layout_width="match_parent"
             android:layout_height="100sp"/>

        <TextView
            android:text="Inicio de Sesión"
            android:textAppearance="?android:attr/textAppearanceLargeInverse"
            android:textSize="50px"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLogIn"
            android:paddingBottom="30px"
            android:textColor="@android:color/black"/>
        <TextView
            android:text="Nombre de Usuario"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewUserName"
            android:textColor="@android:color/black"/>
        <EditText
            android:inputType="textPersonName"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:paddingLeft="10sp"
            android:background="@drawable/camposInf"
            android:id="@+id/nombreUsuario" />
        <TextView
            android:text="Contraseña"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPass"
            android:paddingTop="40px"
            android:textColor="@android:color/black"/>
        <EditText
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:paddingLeft="10sp"
            android:background="@drawable/camposInf"
            android:id="@+id/contraseña" />
         <TextView
            android:paddingTop="15px"
            android:paddingBottom="10px"
            android:layout_marginTop="20px"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:textColor="?android:attr/colorError"
            android:layout_height="wrap_content"
            android:id="@+id/error" />
        <Button
            android:text="Iniciar Sesión"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textColor="@android:color/black"
            android:background="@drawable/camposInf"
            android:backgroundTint="@color/colorPrimary"
            android:id="@+id/inicioSesion" />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="20px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayoutRecuperarPass">
            <TextView
                android:text="¿Aun no tienes cuenta?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textHasOlvidado"
                android:paddingTop="40px"
                android:textSize="35px"
                android:textColor="@android:color/black"/>
            <TextView    
                android:text="@string/underline"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/registrar"
                android:paddingTop="10sp"
                android:gravity="left"
                android:textSize="10sp"
                android:layout_marginLeft="-10sp"
                android:clickable="true"
                android:textColor="@color/colorPrimary"/>



        
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>