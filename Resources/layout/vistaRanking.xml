<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Diario"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Semanal"
                tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="75px"
        android:paddingRight="75px"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ranking general"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/textRanking"
            android:textColor="@android:color/black"
            tools:ignore="HardcodedText"/>

        <LinearLayout
            android:orientation="vertical"
            android:minHeight="100px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:id="@+id/rankingGridLayout"
                android:columnCount="3"
                android:rowCount="20"
                android:background="#fff45719" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto de Ã¡nimo"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="40sp"
            android:id="@+id/textAnimo"
            android:textColor="@android:color/black"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingVertical="1dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_logo"
            android:contentDescription="" />
    </LinearLayout>
</LinearLayout>