<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:paddingTop="50dp"
        android:id="@+id/linearLayoutMain">

        <ImageButton
            android:src="@android:drawable/ic_menu_revert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/atras"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:contentDescription=""/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_marginVertical="20dp"
            android:src="@drawable/icon_logo"
            android:contentDescription="" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:text="Correo electrónico"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMail"
            android:textColor="@android:color/black"
            tools:ignore="HardcodedText" />

        <EditText
            android:inputType="textPersonName"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:background="@drawable/style_camposInf"
            android:id="@+id/correo" />

        <TextView
            android:text="Contraseña"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPass"
            android:paddingTop="20dp"
            android:textColor="@android:color/black"
            tools:ignore="HardcodedText" />

        <EditText
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:background="@drawable/style_camposInf"
            android:id="@+id/contraseña" />

        <TextView
            android:paddingTop="7dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorError"
            android:id="@+id/error" />

        <Button
            android:text="Iniciar Sesión"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textColor="@android:color/black"
            android:background="@drawable/style_camposInf"
            android:backgroundTint="@color/colorPrimary"
            android:id="@+id/inicioSesion"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayoutRecuperarPass">

            <TextView
                android:text="¿Aun no tienes cuenta?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textHasOlvidado"
                android:paddingTop="20dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                tools:ignore="HardcodedText" />

            <TextView
                android:text="@string/underline"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/registrar"
                android:paddingTop="10dp"
                android:gravity="left"
                android:textSize="10sp"
                android:layout_marginLeft="-10dp"
                android:clickable="true"
                android:textColor="@color/colorPrimary"
                tools:ignore="UnresolvedResource,HardcodedSize,NegativeMargin" />



        
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>