<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="60px"
        android:paddingTop="100px"
        android:background="#00542A"
        android:id="@+id/linearLayout1">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2">
             <ImageButton
            android:src="@android:drawable/ic_menu_revert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1" 
            android:paddingBottom="100px"
            android:background="@color/mtrl_btn_transparent_bg_color"/>
            </LinearLayout>

        <TextView
            android:text="Registro"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="#ffff"
            android:paddingBottom="100px"/>
        <TextView
            android:text="Nombre de usuario"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:textColor="#ffff"/>
        <EditText
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombreUsuario" 
            />
        <TextView
            android:text="Correo electrónico"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:paddingTop="35px"
            android:textColor="#ffff"/>
        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/correo" />
        <TextView
            android:paddingTop="35px"
            android:text="Contraseña"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="#ffff"/>
        <EditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contraseña" />
        <TextView
            android:paddingTop="35px"
            android:text="Repita la contraseña"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ererere"
            android:textColor="#ffff"/>
        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contraseña2"
            />
        <TextView
            android:text=""
            android:paddingTop="40px"
            android:paddingBottom="40px"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:textColor="@android:color/holo_red_dark"
            android:layout_height="wrap_content"
            android:id="@+id/error" />

        <Button
            android:text="Registrar"
            android:layout_width="match_parent"
            android:layout_height="49.0dp"
            android:id="@+id/registroB"
            android:textColor="#000000"
            android:backgroundTint="#8DFDC5"
            />

    </LinearLayout>

</RelativeLayout>